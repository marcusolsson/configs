[user]
	email = ninjasinventedphysics@gmail.com
	name = Marcus Olsson

[merge]
	ff = only

[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = red										

[push]
	default = simple

[url "https://github.com/"]
	insteadOf = gh:

[url "https://bitbucket.org/"]
	insteadOf = bb:

[alias]
	st = status -s
	ci = commit
	co = checkout
	up = pull --rebase --prune
	br = checkout -b
	ls = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative 
	ms = merge --squash
	ri = rebase --interactive --autosquash
	fix = !sh -c 'git commit -am \"fixup! $(git log -1 --format='\\''%s'\\'' $@)\"' -
	squash = !sh -c 'git commit -am \"squash! $(git log -1 --format='\\''%s'\\'' $@)\"' -
	wipe = reset HEAD --hard
